    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach to Chrome",
            "port": 5500,
            "request": "attach",
            "type": "pwa-chrome",
            "url": "http://127.0.0.1:5500/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome against localhost",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:9000",
            "webRoot": "${workspaceFolder}"
        },

    ]
}